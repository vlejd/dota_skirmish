<root>
	<!-- Include stylesheets -->
	<styles>
		<include src="file://{resources}/layout/custom_game/hero_selection/hero_selection.css" />
	</styles>

	<!-- Include script files -->
	<scripts>
		<include src="file://{resources}/layout/custom_game/hero_selection/hero_selection.js" />
	</scripts>

	<snippets>
		<snippet name="SelectHeroButton">
			<Panel class="HeroSelectionColumn">
				<Label class="HeroSelectionLabel" text="" />
				<DOTAHeroImage id="0" heroname="" class="HeroSelectionPip" heroimagestyle="landscape" />
			</Panel>
		</snippet>
		<snippet name="SelectScenarioButton">
			<Panel class="ScenarioSelectionColumn">
				<Panel class="ScenarioSelectionColumnInside">
					<Panel class="WillBeButton"> 
						<Image class="ScenarioImg" src="file://{resources}/imgs/placeholder.png"/>
						<Panel class="ScenarioSelectionTextContainer">
							<Label class="ScenarioSelectionLabelName" text="Scenario Label" />
							<Label class="ScenarioSelectionDescription" text="Scenario description" />
							<!-- Include script files 
							<Label class="ScenarioSelectionLabelPlayer" text="" />
							-->
							<Panel class="ScenarioSelectionFooter" >
								<Label class="SelectText" text="Select" />
							</Panel>
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</snippet>
		<snippet name="CustomScenarioButton">
			<Panel class="ScenarioSelectionColumn">
				<Panel class="ScenarioSelectionColumnInside">
					<Panel class="WillBeButton"> 
						<Image class="ScenarioImg" src="file://{resources}/imgs/placeholder.png"/>
						<Panel class="ScenarioSelectionTextContainer">
							<Label class="ScenarioSelectionLabelName" text="Scenario name" />
							<Label class="ScenarioSelectionDescription" text="Description text" />
							<Label class="ScenarioSelectionLabelPlayer" text="" />
							<Panel class="ScenarioSelectionFooter" >
								<Label class="PreSelectText" text="Paste here:" />
								<TextEntry id="CustomScenarioInput" multiline="true" placeholder="  " maxchars="10000000" ontextentrychange="UpdateState()" />
								<Label class="SelectText" text="Select" />
							</Panel>
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<Panel hittest="false" style="width: 100%; height: 100%; flow-children: down; background-color: #00000000;">
		<Panel hittest="false" id="topbarfix" style="width: 100%; height:100px; vertical-align: top;flow-children: right;">
			<Panel id="CustomTopBar" hittest="true" style="width:100%; height: 100%; horizontal-align:left; background-color: #00000000;">
				<Panel id="LogoWrapper" hittest="true">
					<Image class="Logo" src="file://{resources}/imgs/logo.png" style="width:75px; height:75px; vertical-align:center;margin-left:120px;"/>
					<Label id="SkirmishName" text="Dota 2 but Skirmish" style="vertical-align:center; font-size:22px; margin-left:7px; color:#FFFFFF;" />
				</Panel>
			</Panel>
		</Panel>

		<Panel id="VersionContainer" >
			<Panel ittest="true" id="SelectorsContainer">
				<!--
				<Panel style="width:100%; height:100%; background-color:#FF0000FF">
				</Panel>
				-->
				<Panel ittest="true" id="ScenarioSelectionContainerWrapper">
					<Label id="ScenarioTitle" text="Select Scenario" />
					<Panel hittest="true" id="ScenarioSelectionContainer">
					</Panel>
					<Panel id="AddSpace">
						<Panel id="SkirmishLinkWrapper">
							<Panel id="SkirmishLinkContainer">
								<Label class="SkirmishLink" text="Visit " />
								<Label class="SkirmishLink red" text="dota2skirmish.com" />
								<Label class="SkirmishLink" text=" to play other iconic moments even from your own games" />
							</Panel>
						</Panel>
					</Panel>
				</Panel>

				<Panel hittest="true" id="HeroSelectionContainerWrapper">
					<Panel hittest="true" id="HeroSelectionContainer">
						<Label id="HeroSelectionTitle" text="#skirmish_hero_selection" />
						<Panel id="HeroSelectionPanel">
							<Label class="teamName" text="Radiant" />
							<Panel id="HeroSelectionRow1" class="HeroSelectionRow">
								<!--Panels are filled dynamically through js-->
							</Panel>

							<Label class="teamName" text="Dire" />
							<Panel id="HeroSelectionRow2" class="HeroSelectionRow">
								<!--Panels are filled dynamically through js-->
							</Panel>
						</Panel>
					</Panel>
				</Panel>
			</Panel>
			
			<Label id="Version" text="Version: 2024_01_31_1441dev" />
			<Image class="Logo" src="file://{resources}/imgs/background.png" style="width:0px; height:0px;"/>
			<Image class="Logo" src="file://{resources}/imgs/web_background_original.jpg" style="width:0px; height:0px;"/>
			<Image class="Logo" src="file://{resources}/imgs/pass_icon.png" style="width:0px; height:0px;"/>
			<Image class="Logo" src="file://{resources}/imgs/image_15.png" style="width:0px; height:0px;"/>



			<Image class="Logo" src="file://{resources}/imgs/states/generic.png" style="width:0px; height:0px;"/>
			<!--
			<Image class="Logo" src="file://{resources}/imgs/states/2022_ti/100min.png" style="width:0px; height:0px;"/>
			<Image class="Logo" src="file://{resources}/imgs/states/2022_ti/liquid_thunder.png" style="width:0px; height:0px;"/>
			<Image class="Logo" src="file://{resources}/imgs/states/2022_ti/2022_liquid_ta.png" style="width:0px; height:0px;"/>
			<Image class="Logo" src="file://{resources}/imgs/states/2022_ti/done_in_8_min.png" style="width:0px; height:0px;"/>
			<Image class="Logo" src="file://{resources}/imgs/states/2022_ti/last_chance_to_win_ti.png" style="width:0px; height:0px;"/>
			<Image class="Logo" src="file://{resources}/imgs/states/2022_ti/secret_holds_6min_to_win.png" style="width:0px; height:0px;"/>
			-->
		</Panel>
	</Panel>
</root>
